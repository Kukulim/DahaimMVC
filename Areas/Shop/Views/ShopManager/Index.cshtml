@model IEnumerable<DahaimMVC.Areas.Shop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 class="m-3">Produkty w sklepie:</h2>

<p>
    @Html.ActionLink("Dodaj nowy produkt", "Create",null, new { @class = "btn btn-info m-1" })
</p>
<table class="table">
    <tr>
        <th>
            <span>Edit:</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumArtUrl)
        </th>
        <th>
            <span>Details:</span>
        </th>
        <th>
            <span>Delete:</span>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        <a href="@Url.Action("Edit", "ShopManager",new { id = item.ProductId })" class="btn btn-sm btn-info">

            <i class="fas fa-edit"></i>
        </a>
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.Author.AuthorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Type.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AlbumArtUrl)
    </td>
    <td>
        <a href="@Url.Action("Details", "ShopManager",new { id = item.ProductId })" class="btn btn-sm">

            <i class="far fa-address-card"></i>
        </a>
    </td>
    <td>
        <a href="@Url.Action("Delete", "ShopManager",new { id = item.ProductId })" class="btn btn-danger btn-sm">

            <i class="fas fa-window-close"></i>
        </a>
    </td>
</tr>
}

</table>
