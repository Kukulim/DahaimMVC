@model DahaimMVC.Areas.Shop.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2 class="m-4 text-center">Usuwanie Produktu:</h2>

<h3 class="text-danger text-center">Czy napewno chcesz usunąć produkt ?</h3>
<div class="col-md-4 m-auto">
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <img src="@Url.Content(@"~\" + Model.ProductArtUrl)" alt="Produkt" width="300" />
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Author.AuthorName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.AuthorName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color m-3">
            <input type="submit" value="Usuń" class="btn btn-danger m-1" />
        </div>
        <div class="text-center m-3">
            @Html.ActionLink("Powrót do listy produktów", "Index", "ShopManager", null, new { @class = "btn btn-dark m-1" })
        </div>
    }
</div>