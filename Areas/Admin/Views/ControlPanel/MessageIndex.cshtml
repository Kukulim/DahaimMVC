@model IEnumerable<DahaimMVC.Models.Message>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutControlPanel.cshtml";
}
    <div class="container">
        <h2>Skrzynka:</h2>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MessageName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MessageEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MessageText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SendTime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Readed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SendTime)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>